<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:weightSum="1">

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/list_item_friend_pending_button"
        android:src="@drawable/star_on"
        android:layout_gravity="right"
        android:scaleType="fitCenter"
        android:background="@color/cqbackground"
        android:focusableInTouchMode="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="gq"
        android:id="@+id/list_item_friend_pending_name"
        android:textSize="25sp"

        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/list_item_friend_pending_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/list_item_friend_pending_button"
        android:layout_toRightOf="@+id/list_item_friend_pending_button"
        android:textAlignment="center" />
</RelativeLayout>