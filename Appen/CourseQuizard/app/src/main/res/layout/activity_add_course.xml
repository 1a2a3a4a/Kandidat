<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/cqbackground"
    tools:context="com.example.coursequizard.coursequizard.AddCourseActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newCourseNameEditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="61dp"
        android:singleLine="true"
        android:lines="1"
        android:maxLength="90"
        android:hint="Enter coursename" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newCourseCodeEditText"
        android:layout_below="@+id/newCourseNameEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:lines="1"
        android:maxLength="90"
        android:hint="Enter coursecode" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/universitySpinner"
        android:layout_below="@+id/newCourseCodeEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add course"
        android:id="@+id/AddCourseButton"
        android:layout_below="@+id/universitySpinner"
        android:layout_centerHorizontal="true"
        android:onClick="addCourseMethod"
        android:background="#30d314" />
</RelativeLayout>
